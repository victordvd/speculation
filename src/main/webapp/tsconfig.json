{
    "compilerOptions": {
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        // "strictNullChecks": true,
        // "jsx": "react",
        "target": "es6",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        // "esModuleInterop": true,
        "lib": [
            "es2017",
            "dom",
            "es6"
        ]
    },
    "problemMatcher": [
        "$tsc"
    ],
    "types": [
        "jquery"
    ],
    "include": [
        "src/*"
    ]
    // "files": [
    //     "index.d.ts",
    //     "jquery.d.ts"
    // ]
}